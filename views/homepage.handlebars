
<div class="container m-3 p-3 ">
    <section class="card m-3 p-3">
        <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title my-3">Welcome to ATMS system!</h5>
            <p class="card-text fw-bold my-3">We deliever service in 9 hours everyday: from 8am - 5pm. In 24 hours, the service request will have a response.</p>
            <p class="card-text fw-bold my-3"></p>
        </div>
    </section>
</div>
<!--show chart-->

{{#if is_manager}}
    <div class="container m-3 p-3 ">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <div class="card m-3 p-3 d-flex flex-row align-items-center justify-content-around" style="height: 300px;">
            <div class="d-flex flex-column justify-content-center">
                <h5>Current Service Quality <span id="serviceQualityPercent"></span> </h5>
                <h6>Service Level Agreement: in 24 hours</h6>
            </div>
            
            <canvas id="performanceChart" aria-label="performance chart" role="img">
                <p>Performance Chart</p>
            </canvas>
        </div>
        <script src="/js/performanceChart.js"></script>
    </div>
{{/if}}

<!--  show tickets  -->
<div class="container m-3 p-3">
    {{#if is_superintendent}}
        <!--not show button-->
    {{else}}
        <!--create btn-->
        <section class="card m-3 p-3 d-flex justify-content-center">
            <button class="btn btn-outline-dark" id="createBtn">Create Ticket</button>
        </section>
    {{/if}}
    <div class="row justify-content-md-center">
        {{#each tickets as |ticket|}}
        {{> ticket-card}}
        {{/each}}
    </div>
</div>
<br>
<script src="/js/createTicket.js"></script>
<script src="/js/showTicketCard.js"></script>
